<% content_for 'title' do %>
  <title><%= current_site.name %></title>
<% end %>

<header class="header">
  <div class="logo">
    <h1 class="logo__text"><a href='/'><%= current_site.name %></a></h1>
  </div>
</header>

<% @articles.each do |article| %>
  <%= render "terrace/article", article: article, heading_level: "h2" %>
<% end %>

<%= paginate @articles, theme: 'terrace' %>

<footer class="footer">
  <hr />
