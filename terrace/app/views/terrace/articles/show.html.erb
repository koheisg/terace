<% content_for 'title' do %>
  <title><%= @article.title %></title>
<% end %>

<% content_for :description do %>
  <% if @article.description.present? %>
    <meta name="description" content="<%= @article.description %>">
  <% end %>
<% end %>

<% content_for :canonical do %>
  <link rel="canonical" href="<%= "https://#{@article.site.domain}/#{@article.permalink}" %>" />
<% end %>

<% content_for :noindex do %>
  <% if @article.noindex? %>
    <meta name="robots" content="noindex">
  <% end %>
<% end %>

<header class="header">
  <div class="logo">
    <h2 class="logo__text"><a href='/'><%= current_site.name %></a></h2>
  </div>
</header>

<%= render "terrace/article", article: @article, heading_level: "h1" %>

<footer class="footer">
  <hr />
  <p>copyright &copy; <%= Time.current.year %> koheisg All Rights Reserved.</p>
</footer>
