<% content_for 'title' do %>
  <title><%= @article.title %></title>
<% end %>

<% content_for :ogp do %>
  <meta property="og:title" content="<%= @article.title %>" />
  <meta property="og:url" content="<%= request.url %>" />
  <meta property="og:image" content="<%= ogp_url(permalink: @article.permalink) %>" />
<% end %>

<header class="header">
  <div class="logo">
    <h2 class="logo__text"><a href='/'><%= current_site.name %></a></h2>
  </div>
</header>

<%= render "terrace/article", article: @article, heading_level: "h1" %>

<footer class="footer">
  <hr />
  <p>copyright &copy; <%= Time.current.year %> koheisg All Rights Reserved.</p>
</footer>
