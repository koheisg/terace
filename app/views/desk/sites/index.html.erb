
<h1>Sites</h1>

<nav class="local_menu">
  <ul class="tabs">
    <li class="tab"><%= link_to t(".sites"), sites_path %></li>
    <li class="tab"><%= link_to t(".user_sites"), user_sites_path %></li>
  </ul>
</nav>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.domain %></td>
        <td><%= site.name %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path %>
