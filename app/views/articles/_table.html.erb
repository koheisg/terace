<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>State</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.state %></td>
        <td><%= link_to_if article.published?, "/#{article.permalink}", "//#{current_user.host}/#{article.permalink}", target: :_blank %></td>
        <td><%= l article.created_at %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'History', article_histories_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
