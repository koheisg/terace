<table class="articles-table">
  <thead>
    <tr>
      <th>Site</th>
      <th>Title</th>
      <th>State</th>
      <th>Permalink</th>
      <th>Published At</th>
      <th>Modified At</th>
      <th>Updated At</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= article.site.domain %></td>
        <td><%= article.title %></td>
        <td><%= article.state %></td>
        <td><%= link_to_if article.shipped?, "/#{article.permalink}", "//#{article.site.domain}#{request.port_string}/#{article.permalink}", target: :_blank %></td>
        <td><%= article.published_at.to_s(:db) if article.published_at %></td>
        <td><%= article.modified_at.to_s(:db) if article.modified_at %></td>
        <td><%= article.created_at.to_s(:db) %></td>
        <td><%= article.updated_at.to_s(:db) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'History', article_histories_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
