<p id="notice"><%= notice %></p>

<%= form_with model: @q, local: true, url: search_articles_path, method: :get, skip_enforcing_utf8: true, builder: SearchFormBuider do |f| %>
  <%= f.label :title %>
  <%= f.search_field :title %>
  <%= f.submit %>
<% end %>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>State</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.state %></td>
        <td><%= l article.created_at %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @articles %>

<br>

<%= link_to 'New Article', new_article_path %>
