<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= yield('title') %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= "#{controller.controller_name} #{controller.controller_name}--#{controller.action_name}" %>">
    <nav>
      <ul>
        <li><%= link_to t(".home"), root_path %></li>
        <li>
          <%= link_to t(".articles"), articles_path %>
          <ul>
            <li><%= link_to t(".published"), published_index_path %></li>
            <li><%= link_to t(".drafts"), drafts_path %></li>
            <li><%= link_to t(".search"), search_articles_path %></li>
          </ul>
        </li>
        <%- if admin? %>
          <li><%= link_to t(".tags"), tags_path %></li>
          <li><%= link_to t(".users"), users_path %></li>
        <% end %>
        <%- if login? %>
          <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
        <%- if Rails.env.development? %>
          <li><%= link_to t(".routes"), 'rails/info/routes' %></li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
